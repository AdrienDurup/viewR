{
  "scopeName": "js-variable.injection",
  "patterns": [{  "include": "#variable"},{  "include": "#doll-braces"}],
  "repository": {
    "variable":
     {
      "match": "time",
      "name": "entity.other.attribute-name"
    },
     "doll-braces": {
      "begin": "$\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "entity.name.tag" }
      },
      "endCaptures": {
        "0": { "name": "entity.name.tag" }
      },
      "name": "expression.group",
      "patterns": [{ "include": "#variable" }]
    }
  }
}